{
  "rules": {
    "businessPartners": {
      "$partnerId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() === auth.uid)"
      }
    },
    "orders": {
      "$orderId": {
        ".read": "auth != null && (data.child('partnerId').exists() && root.child('businessPartners').child(data.child('partnerId').val()).child('ownerId').val() === auth.uid)",
        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() === auth.uid)"
      }
    },
    "transactions": {
      "$transactionId": {
        ".read": "auth != null && (data.child('partnerId').exists() && root.child('businessPartners').child(data.child('partnerId').val()).child('ownerId').val() === auth.uid)",
        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['partnerId', 'amount', 'type', 'timestamp'])"
      }
    }
  }
}

